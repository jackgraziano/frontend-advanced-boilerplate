<div class="col-xs-12 col-sm-4">
  <div class="card" style="background-image: linear-gradient(-130deg, rgba(0,0,0,0.7) 10%, rgba(0,0,0,0.4)), url(<%=asset_url("images/#{image}")%>)">
    <h2 class="location"><%=location%></h2>
    <%= image_tag "#{avatar}" , class: "avatar" %>
    <div class="wrap-card-content">
      <h3 class="title"><%= title %></h3>
      <p><%= desc %></p>
    </div>
  </div>
</div>
